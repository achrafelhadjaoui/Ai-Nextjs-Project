{
  "manifest_version": 3,
  "name": "Farisly AI",
  "version": "1.0.6",
  "description": "AI-powered browser extension for enhanced productivity and smart replies",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "identity",
    "alarms"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "http://localhost:3000/*",
    "https://*.farisly.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "Farisly AI - Click to toggle panel",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/DragManager.js",
        "content/QuickRepliesManager.js",
        "content/content-enhanced.js"
      ],
      "css": ["content/panel.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "popup/*",
        "content/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Farisly AI panel"
    },
    "quick-reply": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open Quick Replies"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
